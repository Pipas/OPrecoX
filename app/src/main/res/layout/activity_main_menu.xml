<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="software.pipas.oprecox.Menus.MainMenu">

    <software.pipas.oprecox.CustomViews.HalfScreenToolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:elevation="4dp">
    </software.pipas.oprecox.CustomViews.HalfScreenToolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:elevation="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:onClick="pressSettings">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:padding="12dp"
            android:src="@drawable/settings"
            android:tint="#ffffff" />

    </LinearLayout>

    <software.pipas.oprecox.CustomViews.CustomMainMenuImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/web_logo"
        android:elevation="4dp"
        android:paddingTop="18dp"
        android:paddingBottom="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logo"
        android:layout_marginBottom="18dp"
        android:elevation="4dp"
        android:textColor="#ffffff"
        android:text="@string/app_name"
        android:textSize="36dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/startSinglePlayerGame"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="startSinglePlayerGame"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@id/logo">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/singleplayer"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_below="@id/startSinglePlayerGame"/>

    <LinearLayout
        android:id="@+id/startMultiPlayerGame"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="startMultiplayerGame"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@id/startSinglePlayerGame">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/multiplayer"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_below="@id/startMultiPlayerGame"/>

</RelativeLayout>
