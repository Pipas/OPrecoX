<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="software.pipas.oprecox">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/Guesser" />
        <activity android:name=".Menus.SinglePlayerOptions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Menus.CategoryChooser" />
        <activity android:name=".Menus.GameOver" />
        <activity
            android:name=".ImageViewer.ImageViewer"
            android:theme="@style/ImageViewer" />
        <activity android:name=".Menus.NGuessesChooser"></activity>
    </application>

</manifest>